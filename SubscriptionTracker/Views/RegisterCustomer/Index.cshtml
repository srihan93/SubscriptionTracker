@model CustomerSubscription

<form asp-action="AddCustomer" method="Post" class="form-horizontal" role="form">
    <h4>Registration</h4>

    <h6 style="color:cornflowerblue">***Adding customer will make two entry in Transaction of &#8377;200 and Cost after offer</h6>

    <div asp-validation-summary="All" class="danger"></div>

    <div class="form-group">
        <label asp-for="Customer.Name" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Customer.Name" class="form-control" />
            <span asp-validation-for="Customer.Name" class="danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Customer.MobileNumber" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Customer.MobileNumber" class="form-control" />
            <span asp-validation-for="Customer.MobileNumber" class="danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Customer.Age" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Customer.Age" class="form-control" />
            <span asp-validation-for="Customer.Age" class="danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Customer.Gender" class="col-md-2 control-label">Gender</label>
        <div class="col-md-5">
            <select id="gender" asp-for="Customer.Gender">
                <option value="M">Male</option>
                <option value="F">Female</option>
                <option value="T">Transgender</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Customer.Height" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Customer.Height" class="form-control" />
            <span asp-validation-for="Customer.Height" class="danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Customer.Weight" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Customer.Weight" class="form-control" />
            <span asp-validation-for="Customer.Weight" class="danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Customer.Address" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Customer.Address" class="form-control" />
            <span asp-validation-for="Customer.Address" class="danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="PlanId" class="col-md-2 control-label">Plan</label>
        <div class="col-md-5">
            <select id="plan" asp-for="PlanId">
                <option value="1">Monthly,1500</option>
                <option value="2">Quartely,3000</option>
                <option value="3">Half-Yearly,4500</option>
                <option value="4">Annual,7000</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Plan.Cost" class="col-md-2 control-label">Cost after offer</label>
        <div class="col-md-5">
            <input id="plancost" asp-for="Plan.Cost" class="form-control" />
            <span asp-validation-for="Plan.Cost" class="danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label">Discount</label>
        <div class="col-md-5">
            <input id="discount" type="text" class="form-control" value="0" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Register Customer" />
        </div>
    </div>
</form>

<script type="text/javascript">
    $("#plan").change(function () {
        if ($(this).val() == "1") {
            let planCost = 1200;
            let cost = planCost - $("#discount").val();
            $("#plancost").val(cost);
        }
        if ($(this).val() == 2) {
            let planCost = 2600;
            let cost = planCost - $("#discount").val();
            $("#plancost").val(cost);
        }
        if ($(this).val() == 3) {
            let planCost = 4500;
            let cost = planCost - $("#discount").val();
            $("#plancost").val(cost);
        }
        if ($(this).val() == 4) {
            let planCost = 6000;
            let cost = planCost - $("#discount").val();
            $("#plancost").val(cost);
        }
    });

    $('#discount').keyup(function () {
        let afterDiscount = $("#plancost").val() - $(this).val();
        $("#plancost").val(afterDiscount);

        if ($("#plan").val() == 1) {
            let planCost = 1200;
            let cost = planCost - $("#discount").val();
            $("#plancost").val(cost);
        }
        if ($("#plan").val() == 2) {
            let planCost = 2600;
            let cost = planCost - $("#discount").val();
            $("#plancost").val(cost);
        }
        if ($("#plan").val() == 3) {
            let planCost = 4500;
            let cost = planCost - $("#discount").val();
            $("#plancost").val(cost);
        }
        if ($("#plan").val() == 4) {
            let planCost = 6000;
            let cost = planCost - $("#discount").val();
            $("#plancost").val(cost);
        }

    }
    );
</script>