@model Customer

@{
    ViewData["Title"] = "Optimus Fitness";
}

<h6 style="color:cornflowerblue">Successfull</h6>

<h4>Customer Details</h4>

<h6 style="color:cornflowerblue">***Adding customer will make an entry in Transaction of &#8377;200</h6>

<div class="form-group">
    <label asp-for="CustomerId" class="col-md-2 control-label">Customer ID</label>
    <div class="col-md-5">
        <input type="text" asp-for="CustomerId" class="form-control" value="@Model.CustomerId" />
    </div>
</div>
<div class="form-group">
    <label asp-for="Name" class="col-md-2 control-label"></label>
    <div class="col-md-5">
        <input type="text" asp-for="Name" class="form-control" value="@Model.Name" />
    </div>
</div>

<div class="form-group">
    <label asp-for="MobileNumber" class="col-md-2 control-label"></label>
    <div class="col-md-5">
        <input type="text" asp-for="MobileNumber" value="@Model.MobileNumber" class="form-control" />
    </div>
</div>

<div class="form-group">
    <label asp-for="Address" class="col-md-2 control-label"></label>
    <div class="col-md-5">
        <input type="text" asp-for="Address" class="form-control" value="@Model.Address" />
    </div>
</div>

<div class="form-group">
    <div class="col-md-offset-2 col-md-5">

        <a class="btn btn-primary" asp-controller="RegisterCustomer" asp-action="AddCustomer">back</a>

        <input type="button" class="btn btn-primary" value="Complete Order" />
    </div>
</div>